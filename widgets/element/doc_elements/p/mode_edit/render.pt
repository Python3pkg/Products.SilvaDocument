<div metal:use-macro="container/macro_edit_view/macros/edit_view">
<metal:block fill-slot="edit_input">
  <script type="text/javascript" 
    tal:attributes="src python:request.model.get_container().absolute_url()+'/edit/reference.js'">
  </script>
<script type="text/javascript" tal:content="structure python:here.focus_editor('data')" />
<div align="right">
<input type="button" class="transport" name="" value="get link reference..." title="create a hyperlink: alt-g" accesskey="g"
  tal:define="container node/get_container"
  tal:attributes="onclick python:'getAssetReference(\'%s/edit/hyperlink_lookup?asset_context=%s\', \' ((_id_|_reference_))\', \'focusbox\', \'data\', 1);;return false;;' % (container.absolute_url(), '/'.join(container.getPhysicalPath()))" />
</div>
<div class="textarea">
  <textarea class="fixIE6widget" id="data" name="data" cols="65" wrap="soft" 
    tal:attributes="rows here/get_lines" tal:content="here/editable_content">Content</textarea>
</div>
</metal:block>
<metal:block fill-slot="element_controls">
<script type="text/javascript" tal:content="structure here/elements.js" />
element 
<select class="manipulator" name="what" onChange="updateSelectionOptions()">
  <option value="p" selected="selected">paragraph</option>
  <option value="heading">heading</option>
  <option value="list">list</option>
  <option value="pre">preformatted</option>
  <option value="dlist">definition list</option>
</select>
&nbsp;
type 
<select class="manipulator" name="element_type" tal:define="type here/get_type">
  <option value="normal" tal:attributes="selected python:test(type == 'normal', 'selected', nothing)">normal</option>
  <option value="lead" tal:attributes="selected python:test(type == 'lead', 'selected', nothing)">lead</option>
  <option value="annotation" tal:attributes="selected python:test(type == 'annotation', 'selected', nothing)">annotation</option>
</select>
</metal:block>
<metal:block fill-slot="edit_notes">
<ul class="tips">
  <li><b>Tip:</b> tab to the exit button or use alt-e.</li>
  <li>Multiple paragraphs can be entered in one step by adding an empty line space.</li>
  <li metal:use-macro="container/macro_notes/macros/markup_notes">markup tips</li>
</ul>
</metal:block>
</div>
