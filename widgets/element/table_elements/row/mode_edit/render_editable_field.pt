<init tal:omit-tag="" 
  tal:define="global silva_root here/get_root_url;
              global node options/node;
              global cellwidth options/cellwidth | nothing;
              global node_path python:node.getNodePath('widget');
              global url_start string:${request/xml_url}/${node_path}/edit;
              global simple python:here.is_field_simple(node)" />
<td tal:attributes="width cellwidth"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva_document">
<span style="text-align:right;float:right;"><a title="delete element" tal:attributes="href string:${url_start}/delete" onclick="return confirm('Really delete?')" href="delete" i18n:attributes="title"><img tal:attributes="src string:${silva_root}/globals/delete.gif" width="16" height="12" alt="delete element" border="0" i18n:attributes="alt" /></a>
</span>
<a title="nest element" tal:attributes="href string:${request/xml_url}/${node_path}/edit/edit_mode" i18n:attributes="title">
<img tal:attributes="src string:${here/get_root_url}/globals/nest_element.gif" width="16" height="16" border="0" alt="nest element" i18n:attributes="alt"/></a>
<br />
<div tal:condition="simple" tal:replace="structure python:here.render_simple(node)" />
<div tal:condition="not:simple" tal:replace="structure python:here.render_sub(node)" />
</td>
